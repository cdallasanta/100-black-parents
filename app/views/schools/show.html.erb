<div id="school-page">
  <div id="top-banner">
    <h1><%= @school.name %></h1>
    <%= contactOrForm(@school) %>
    <div class="ad banner">Banner Ad</div>
  </div>

  <%= render "partials/sidebar", district_id: @school.district.id, schools: @school.district.schools %>

  <div id="blogs-section">
    <h3>Blogs</h3>
    <div id="blogs-div">
      <%= render @blogs %>
    </div>
    <% if @events.length > 4 %>
      <a href="#" id="show-more-blogs-link">Show more</a>
    <% end %>
  </div>
  <div id="events-section">
    <h3>Upcoming Events</h3>
    <div id="events-div">
      <%= render @events %>
    </div>
    <% if @events.length > 4 %>
      <a href="#" id="show-more-events-link">Show more</a>
    <% end %>
  </div>
</div>